pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Utilisation de Git pour récupérer le code
                git branch: 'medali', url: 'https://github.com/abdou6666/devops_project.git'
            }
        }

        stage('Clean compile maven') {
            steps {
                // Exécution des commandes Mavenf
                sh 'mvn clean compile'
            }
        }
        stage('Clean Workspace') {
            steps {
                deleteDir()
       }
}
    }
}