pipeline {
    agent any

    environment {
        // Define the person and branch information
        PERSON = 'medalii'
        BRANCH = 'medali'
    }

    stages {
        stage("Retrieve code for ") {
            steps {
                // Checkout the specified branch
                checkout( [$class: 'GitSCM', branches: [[name: "${BRANCH}"]], userRemoteConfigs: [[url: 'https://github.com/abdou6666/devops_project.git']]])
            }
        }
        stage("Build and Clean for ") {
            steps {
                // Execute the Maven command to clean and compile
                sh 'mvn clean compile'
            }
        }
        stage("Run Tests for ") {
            steps {
                // Execute the Maven command to run tests
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            cleanWs() // Clean up the workspace regardless of the build result
        }
    }
}